<%= form_with(model: @filmography, local: true) do |f| %>

  <%= f.hidden_field :movie_id, value: @movie.id %>

  <div class="form-group">
    <%= f.label :director_id %>

    <%= f.collection_select :director_id, Director.all, :id, :to_s, {}, class: "form-control" %>
  </div>

  <%= f.submit "Create filmography", class: "btn btn-block btn-outline-secondary" %>
<% end %>
